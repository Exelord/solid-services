{
  "name": "solid-services",
  "description": "Solid.js library adding a services layer for global shared state.",
  "version": "2.0.0",
  "license": "MIT",
  "homepage": "https://github.com/Exelord/solid-services",
  "repository": "github:exelord/solid-services",
  "keywords": [
    "solidhack",
    "best_ecosystem",
    "solidjs"
  ],
  "contributors": [
    {
      "name": "Maciej Kwa≈õniak",
      "email": "contact@exelord.com",
      "url": "https://exelord.com"
    }
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "source": "./dist/src/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest --coverage",
    "prepublishOnly": "npm run build",
    "dev": "npm-run-all --parallel 'build:** -- --watch'",
    "build": "npm-run-all --parallel build:** && npm run types",
    "build:js": "vite build",
    "build:source": "tsc",
    "types": "tsc --emitDeclarationOnly --declaration --outDir ./dist/types",
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "v${version}",
      "tagAnnotation": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "hooks": {
      "before:init": [
        "npm test"
      ]
    }
  },
  "devDependencies": {
    "c8": "^7.11.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.14.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.1",
    "vitest": "^0.9.3"
  },
  "dependencies": {
    "solid-js": "^1.3.14"
  }
}
